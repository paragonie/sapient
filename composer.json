{
  "name": "paragonie/sapient",
  "description": "Secure API Toolkit",
  "type": "library",
  "require": {
    "php": "^7|^8",
    "guzzlehttp/psr7": "^1",
    "paragonie/constant_time_encoding": "^2|^3",
    "paragonie/sodium_compat": ">= 1.15.4 || >= 2.1",
    "psr/http-message": "^1"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7",
    "phpunit/phpunit": "^6|^7|^8|^9|^10",
    "vimeo/psalm": "^2|^3|^4"
  },
  "suggest": {
    "guzzlehttp/guzzle": ">= 6.0 -- Sapient can be used a Guzzle adapter"
  },
  "autoload": {
    "psr-4": {
      "ParagonIE\\Sapient\\": "src"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Paragon Initiative Enterprises",
      "email": "info@paragonie.com"
    }
  ]
}
